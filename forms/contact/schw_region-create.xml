          </input>
          <input ref="/data/contact/ephemeral_dob/age">
            <label ref="jr:itext('/data/contact/ephemeral_dob/age:label')"/>
          </input>
        </group>
      </group>
      <input ref="/data/contact/phone">
        <label ref="jr:itext('/data/contact/phone:label')"/>
      </input>
      <input ref="/data/contact/alternate_phone">
        <label ref="jr:itext('/data/contact/alternate_phone:label')"/>
      </input>
      <input ref="/data/contact/external_id">
        <label ref="jr:itext('/data/contact/external_id:label')"/>
      </input>
      <input ref="/data/contact/treatment_program">
        <label ref="jr:itext('/data/contact/treatment_program:label')"/>
      </input>
      <select1 ref="/data/contact/education_level">
        <label ref="jr:itext('/data/contact/education_level:label')"/>
        <item>
          <label ref="jr:itext('/data/contact/education_level/none:label')"/>
          <value>none</value>
        </item>
        <item>
          <label ref="jr:itext('/data/contact/education_level/primary:label')"/>
          <value>primary</value>
        </item>
        <item>
          <label ref="jr:itext('/data/contact/education_level/secondary:label')"/>
          <value>secondary</value>
        </item>
        <item>
          <label ref="jr:itext('/data/contact/education_level/college:label')"/>
          <value>college</value>
        </item>
        <item>
          <label ref="jr:itext('/data/contact/education_level/university:label')"/>
          <value>university</value>
        </item>
      </select1>
      <input ref="/data/contact/date_joined">
        <label ref="jr:itext('/data/contact/date_joined:label')"/>
      </input>
      <input appearance="multiline" ref="/data/contact/notes">
        <label ref="jr:itext('/data/contact/notes:label')"/>
      </input>
      <group appearance="hidden" ref="/data/contact/meta"/>
    </group>
    <group appearance="field-list" ref="/data/schw_region">
      <input ref="/data/schw_region/name">
        <label ref="jr:itext('/data/schw_region/name:label')"/>
      </input>
      <input ref="/data/schw_region/external_id">
        <label ref="jr:itext('/data/schw_region/external_id:label')"/>
      </input>
      <input appearance="multiline" ref="/data/schw_region/notes">
        <label ref="jr:itext('/data/schw_region/notes:label')"/>
      </input>
      <group appearance="hidden" ref="/data/schw_region/meta"/>
    </group>

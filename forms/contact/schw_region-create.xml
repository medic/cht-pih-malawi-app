      <bind nodeset="/data/inputs" relevant="false()"/>
      <bind nodeset="/data/inputs/user/contact_id" type="string"/>
      <bind nodeset="/data/inputs/user/facility_id" type="string"/>
      <bind nodeset="/data/inputs/user/name" type="string"/>
      <bind nodeset="/data/init/create_new_person" required="true()" type="select1"/>
      <bind nodeset="/data/contact" relevant="selected( /data/init/create_new_person ,'new_person')"/>
      <bind nodeset="/data/contact/parent" type="string"/>
      <bind nodeset="/data/contact/type" type="string"/>
      <bind nodeset="/data/contact/contact_type" type="string"/>
      <bind nodeset="/data/contact/name" required="true()" type="string"/>
      <bind nodeset="/data/contact/sex" relevant="selected( /data/init/create_new_person ,'new_person')" required="true()" type="select1"/>
      <bind calculate="format-date-time( /data/contact/ephemeral_dob/dob_raw ,&quot;%Y-%m-%d&quot;)" nodeset="/data/contact/date_of_birth" type="string"/>
      <bind nodeset="/data/contact/ephemeral_dob/contact_dob_method" type="select1"/>
      <bind constraint=".&lt;today()" jr:constraintMsg="Date must be before today" nodeset="/data/contact/ephemeral_dob/dob_calendar" relevant="selected(../contact_dob_method,'calendar')" required="true()" type="date"/>
      <bind constraint=". &gt; 0 and . &lt; 120" jr:constraintMsg="Age must be between 0 and 120" nodeset="/data/contact/ephemeral_dob/age" relevant="selected(../contact_dob_method,'approx')" required="true()" type="int"/>
      <bind calculate="if(selected( ../contact_dob_method,'calendar'), ../dob_calendar, format-date-time( decimal-date-time( today() ) - (365.25 * ../age) , &quot;%Y-%m-%d&quot;) )" nodeset="/data/contact/ephemeral_dob/dob_raw" type="string"/>
      <bind calculate="decimal-date-time(../dob_raw)" nodeset="/data/contact/ephemeral_dob/dob_iso" type="string"/>
      <bind constraint="true()" jr:constraintMsg="Please enter a valid local number, or use the standard international format, which includes a plus sign (+) and country code. For example: +254712345678" nodeset="/data/contact/phone" relevant="selected( /data/init/create_new_person ,'new_person')" type="tel"/>
      <bind constraint="true()" jr:constraintMsg="Please enter a valid local number, or use the standard international format, which includes a plus sign (+) and country code. For example: +254712345678" nodeset="/data/contact/alternate_phone" relevant="selected( /data/init/create_new_person ,'new_person')" type="tel"/>
      <bind nodeset="/data/contact/external_id" relevant="selected( /data/init/create_new_person ,'new_person')" type="string"/>
      <bind nodeset="/data/contact/treatment_program" type="string"/>
      <bind nodeset="/data/contact/education_level" type="select1"/>
      <bind constraint=". &lt; today()" jr:constraintMsg="Date must be before today" nodeset="/data/contact/date_joined" type="date"/>
      <bind nodeset="/data/contact/notes" relevant="selected( /data/init/create_new_person ,'new_person')" type="string"/>
      <bind calculate="../../../inputs/user/name" nodeset="/data/contact/meta/created_by" type="string"/>
      <bind calculate="../../../inputs/user/contact_id" nodeset="/data/contact/meta/created_by_person_uuid" type="string"/>
      <bind calculate="../../../inputs/user/facility_id" nodeset="/data/contact/meta/created_by_place_uuid" type="string"/>
      <bind nodeset="/data/schw_region/parent" type="string"/>
      <bind nodeset="/data/schw_region/type" type="string"/>
      <bind nodeset="/data/schw_region/contact_type" type="string"/>
      <bind nodeset="/data/schw_region/name" required="true()" type="string"/>
      <bind nodeset="/data/schw_region/external_id" type="string"/>
      <bind nodeset="/data/schw_region/notes" type="string"/>
      <bind calculate="if(selected( /data/init/create_new_person ,'none'), &quot;&quot;, &quot;NEW&quot;)" nodeset="/data/schw_region/contact" type="string"/>
      <bind calculate="concat(../../inputs/meta/location/lat, concat(' ', ../../inputs/meta/location/long))" nodeset="/data/schw_region/geolocation" type="string"/>
      <bind calculate="../../../inputs/user/name" nodeset="/data/schw_region/meta/created_by" type="string"/>
      <bind calculate="../../../inputs/user/contact_id" nodeset="/data/schw_region/meta/created_by_person_uuid" type="string"/>
      <bind calculate="../../../inputs/user/facility_id" nodeset="/data/schw_region/meta/created_by_place_uuid" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/data/meta/instanceID" readonly="true()" type="string"/>
    </model>

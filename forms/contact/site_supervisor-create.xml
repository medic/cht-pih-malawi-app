      <bind nodeset="/data/n_none_hh_member" readonly="true()" relevant="starts-with( /data/person/parent , ../facility_id)" type="string"/>
      <bind calculate="if(starts-with( /data/person/parent , ../facility_id),1,0)" nodeset="/data/none_hh_member_flag" type="string"/>
      <bind nodeset="/data/person" relevant=" /data/none_hh_member_flag  = 0"/>
      <bind nodeset="/data/person/type" type="string"/>
      <bind nodeset="/data/person/contact_type" type="string"/>
      <bind nodeset="/data/person/parent" type="string"/>
      <bind constraint="regex(.,'[a-zA-Z]{1,50}[ ]{0,1}[a-zA-Z]{1,50}')" jr:constraintMsg="jr:itext('/data/person/name:jr:constraintMsg')" nodeset="/data/person/name" required="true()" type="string"/>
      <bind nodeset="/data/person/sex" required="true()" type="select1"/>
      <bind calculate="../name" nodeset="/data/person/c_name" type="string"/>
      <bind jr:constraintMsg="jr:itext('/data/person/phone:jr:constraintMsg')" nodeset="/data/person/phone" required="false()" type="string"/>
      <bind jr:constraintMsg="jr:itext('/data/person/alternate_phone:jr:constraintMsg')" nodeset="/data/person/alternate_phone" required="false()" type="string"/>
      <bind nodeset="/data/person/notes" type="string"/>
      <bind nodeset="/data/person/external_id" type="string"/>
      <bind nodeset="/data/person/meta/created_by" type="string"/>
      <bind nodeset="/data/person/meta/created_by_person_uuid" type="string"/>
      <bind nodeset="/data/person/meta/created_by_place_uuid" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/data/meta/instanceID" readonly="true()" type="string"/>

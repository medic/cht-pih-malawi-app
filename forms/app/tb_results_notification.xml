      <bind calculate="../inputs/source_id" nodeset="/tb_results_notification/source_id" type="string"/>
      <bind calculate="../inputs/client_uuid" nodeset="/tb_results_notification/patient_uuid" type="string"/>
      <bind calculate="../inputs/client_id" nodeset="/tb_results_notification/patient_id" required="true()" type="string"/>
      <bind calculate="../inputs/client_name" nodeset="/tb_results_notification/patient_name" type="string"/>
      <bind calculate="../patient_name" nodeset="/tb_results_notification/c_patient_name" type="string"/>
      <bind calculate="../inputs/contact/date_of_birth" nodeset="/tb_results_notification/patient_date_of_birth" type="string"/>
      <bind calculate="coalesce(floor( difference-in-months(  /tb_results_notification/patient_date_of_birth , today() ) div 12 ), ../inputs/client_age_in_years)" nodeset="/tb_results_notification/patient_age_in_years" type="string"/>
      <bind calculate="../patient_age_in_years" nodeset="/tb_results_notification/c_patient_age_in_years" type="string"/>
      <bind calculate="difference-in-months(  /tb_results_notification/patient_date_of_birth , today() )" nodeset="/tb_results_notification/patient_age_in_months" type="string"/>
      <bind calculate="floor( decimal-date-time(today()) - decimal-date-time( /tb_results_notification/patient_date_of_birth ) )" nodeset="/tb_results_notification/patient_age_in_days" type="string"/>
      <bind calculate="../inputs/contact/date_of_birth" nodeset="/tb_results_notification/date_of_birth" type="string"/>
      <bind calculate="../inputs/contact/parent/parent/contact/phone" nodeset="/tb_results_notification/chw_phone" type="string"/>
      <bind calculate="../inputs/contact/parent/parent/contact/name" nodeset="/tb_results_notification/chw_name" type="string"/>
      <bind calculate="../inputs/tb_result" nodeset="/tb_results_notification/result" type="string"/>
      <bind calculate="if(../result = 'positive', 'Ali ndi chifuwa chachikulu', if(../result='negative', 'Alibe chifuwa chachikulu', 'Makhololo anabwezedwa'))" nodeset="/tb_results_notification/result_ny" type="string"/>
      <bind nodeset="/tb_results_notification/tb_results/n_results" readonly="true()" type="string"/>
      <bind nodeset="/tb_results_notification/tb_results/n_update" readonly="true()" relevant=" /tb_results_notification/result  = 'positive' or  /tb_results_notification/result  = 'negative'" type="string"/>
      <bind nodeset="/tb_results_notification/tb_results/n_collect" readonly="true()" relevant=" /tb_results_notification/result  = 'rejected'" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/tb_results_notification/meta/instanceID" readonly="true()" type="string"/>
    </model>

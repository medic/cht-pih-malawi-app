      <bind nodeset="/tb_tracing/inputs/contact/sex" type="string"/>
      <bind nodeset="/tb_tracing/inputs/contact/parent/parent/contact/name" type="string"/>
      <bind nodeset="/tb_tracing/inputs/contact/parent/parent/contact/phone" type="string"/>
      <bind calculate="../inputs/source" nodeset="/tb_tracing/source" type="string"/>
      <bind calculate="../inputs/source_id" nodeset="/tb_tracing/source_id" type="string"/>
      <bind calculate="../inputs/contact/_id" nodeset="/tb_tracing/patient_uuid" type="string"/>
      <bind calculate="../inputs/contact/_id" nodeset="/tb_tracing/patient_id" required="true()" type="string"/>
      <bind calculate="../inputs/contact/name" nodeset="/tb_tracing/patient_name" type="string"/>
      <bind calculate="../inputs/contact/date_of_birth" nodeset="/tb_tracing/patient_date_of_birth" type="string"/>
      <bind calculate="floor( difference-in-months(  /tb_tracing/inputs/contact/date_of_birth , today() ) div 12 )" nodeset="/tb_tracing/patient_age_in_years" type="string"/>
      <bind calculate="difference-in-months(  /tb_tracing/inputs/contact/date_of_birth , today() )" nodeset="/tb_tracing/patient_age_in_months" type="string"/>
      <bind calculate="floor( decimal-date-time(today()) - decimal-date-time( /tb_tracing/inputs/contact/date_of_birth ) )" nodeset="/tb_tracing/patient_age_in_days" type="string"/>
      <bind calculate="floor((decimal-date-time(today()) - decimal-date-time( /tb_tracing/inputs/contact/date_of_birth )) div 7)" nodeset="/tb_tracing/patient_age_in_weeks" type="string"/>
      <bind nodeset="/tb_tracing/contact_tracing/n_refer" readonly="true()" type="string"/>
      <bind constraint="not(selected(., 'none') 
and count-selected(.) &gt; 1)" jr:constraintMsg="jr:itext('/tb_tracing/contact_tracing/referred:jr:constraintMsg')" nodeset="/tb_tracing/contact_tracing/referred" required="true()" type="select1"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/tb_tracing/meta/instanceID" readonly="true()" type="string"/>
    </model>

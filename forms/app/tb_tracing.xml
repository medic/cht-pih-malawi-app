  <h:body class="pages">
    <group appearance="field-list" ref="/tb_tracing/inputs">
      <label ref="jr:itext('/tb_tracing/inputs:label')"/>
      <group ref="/tb_tracing/inputs/contact">
        <label ref="jr:itext('/tb_tracing/inputs/contact:label')"/>
        <input appearance="db-object" ref="/tb_tracing/inputs/contact/_id">
          <label ref="jr:itext('/tb_tracing/inputs/contact/_id:label')"/>
        </input>
        <group ref="/tb_tracing/inputs/contact/parent">
          <label ref="jr:itext('/tb_tracing/inputs/contact/parent:label')"/>
          <group ref="/tb_tracing/inputs/contact/parent/parent">
            <label ref="jr:itext('/tb_tracing/inputs/contact/parent/parent:label')"/>
            <group ref="/tb_tracing/inputs/contact/parent/parent/contact">
              <label ref="jr:itext('/tb_tracing/inputs/contact/parent/parent/contact:label')"/>
            </group>
          </group>
        </group>
      </group>
    </group>
    <group appearance="field-list" ref="/tb_tracing/contact_tracing">
      <label ref="jr:itext('/tb_tracing/contact_tracing:label')"/>
      <input ref="/tb_tracing/contact_tracing/n_refer">
        <label ref="jr:itext('/tb_tracing/contact_tracing/n_refer:label')"/>
      </input>
      <select1 ref="/tb_tracing/contact_tracing/referred">
        <label ref="jr:itext('/tb_tracing/contact_tracing/referred:label')"/>
        <item>
          <label ref="jr:itext('/tb_tracing/contact_tracing/referred/yes:label')"/>
          <value>yes</value>
        </item>
        <item>
          <label ref="jr:itext('/tb_tracing/contact_tracing/referred/no:label')"/>
          <value>no</value>
        </item>
      </select1>
    </group>
  </h:body>
</h:html>

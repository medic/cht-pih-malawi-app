      <bind nodeset="/discharge/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/discharge/inputs/source" type="string"/>
      <bind nodeset="/discharge/inputs/source_id" type="string"/>
      <bind nodeset="/discharge/inputs/contact/_id" required="true()" type="db:person"/>
      <bind nodeset="/discharge/inputs/contact/name" type="string"/>
      <bind nodeset="/discharge/inputs/contact/patient_id" type="string"/>
      <bind nodeset="/discharge/inputs/contact/date_of_birth" type="string"/>
      <bind nodeset="/discharge/inputs/contact/sex" type="string"/>
      <bind nodeset="/discharge/inputs/contact/parent/parent/contact/name" type="string"/>
      <bind nodeset="/discharge/inputs/contact/parent/parent/contact/phone" type="string"/>
      <bind calculate="../inputs/source" nodeset="/discharge/source" type="string"/>
      <bind calculate="../inputs/source_id" nodeset="/discharge/source_id" type="string"/>
      <bind calculate="../inputs/contact/_id" nodeset="/discharge/patient_uuid" type="string"/>
      <bind calculate="if(../inputs/contact/patient_id != '', 
../inputs/contact/patient_id, 
../discharge_details/patient_id)" nodeset="/discharge/patient_id" required="true()" type="string"/>
      <bind calculate="../inputs/contact/name" nodeset="/discharge/patient_name" type="string"/>
      <bind calculate="floor( difference-in-months( ../inputs/contact/date_of_birth, today() ) div 12 )" nodeset="/discharge/patient_age_in_years" type="string"/>
      <bind calculate="difference-in-months(../inputs/contact/date_of_birth, today() )" nodeset="/discharge/patient_age_in_months" type="string"/>
      <bind calculate="../inputs/contact/date_of_birth" nodeset="/discharge/date_of_birth" type="string"/>
      <bind calculate="instance('contact-summary')/context/chw_phone" nodeset="/discharge/chw_phone" type="string"/>
      <bind calculate="concat(../../inputs/meta/location/lat, concat(' ', ../../inputs/meta/location/long))" nodeset="/discharge/geolocation" type="string"/>
      <bind calculate="if(instance('contact-summary')/context/pregnant, 1, 0)" nodeset="/discharge/pregnant" type="string"/>
      <bind calculate="true()" nodeset="/discharge/needs_signoff" type="string"/>
      <bind constraint="decimal-date-time(.) &lt;= decimal-date-time(today())" jr:constraintMsg="jr:itext('/discharge/discharge_details/discharge_date:jr:constraintMsg')" nodeset="/discharge/discharge_details/discharge_date" required="true()" type="date"/>
      <bind nodeset="/discharge/discharge_details/discharge_diagnoses" required="true()" type="select"/>
      <bind nodeset="/discharge/discharge_details/discharge_diagnoses_other" relevant="selected(../discharge_diagnoses, 'other')" required="true()" type="string"/>
      <bind nodeset="/discharge/group_review/n_submit" readonly="true()" type="string"/>
      <bind nodeset="/discharge/group_review/n_patient_details_title" readonly="true()" type="string"/>
      <bind calculate="../../patient_age_in_months mod 12" nodeset="/discharge/group_review/c_patient_mod_mnths" type="string"/>
      <bind calculate="if(../../patient_age_in_years &lt;= 5, 
concat( /discharge/patient_age_in_years , ' years ',  /discharge/group_review/c_patient_mod_mnths , ' months old'),
concat( /discharge/patient_age_in_years , ' years old'))" nodeset="/discharge/group_review/c_age_string" type="string"/>
      <bind nodeset="/discharge/group_review/n_patient_details" readonly="true()" type="string"/>
      <bind nodeset="/discharge/group_review/n_discharge_reasons_title" readonly="true()" type="string"/>
      <bind nodeset="/discharge/group_review/n_delivery" readonly="true()" relevant="selected(../../discharge_details/discharge_diagnoses, 'delivery')" type="string"/>
      <bind nodeset="/discharge/group_review/n_malnutrition" readonly="true()" relevant="selected(../../discharge_details/discharge_diagnoses, 'malnutrition')" type="string"/>
      <bind nodeset="/discharge/group_review/n_tb" readonly="true()" relevant="selected(../../discharge_details/discharge_diagnoses, 'tb')" type="string"/>
      <bind nodeset="/discharge/group_review/n_other_discharge" readonly="true()" relevant="selected(../../discharge_details/discharge_diagnoses, 'other')" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/discharge/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list" ref="/discharge/inputs">
      <label ref="jr:itext('/discharge/inputs:label')"/>

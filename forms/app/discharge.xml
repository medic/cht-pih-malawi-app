      </input>
      <select ref="/discharge/discharge_details/discharge_diagnoses">
        <label ref="jr:itext('/discharge/discharge_details/discharge_diagnoses:label')"/>
        <hint ref="jr:itext('/discharge/discharge_details/discharge_diagnoses:hint')"/>
        <itemset nodeset="instance('discharge_reasons')/root/item[pregnant =  /discharge/pregnant  or pregnant = '0']">
          <value ref="name"/>
          <label ref="jr:itext(itextId)"/>
        </itemset>
      </select>
      <input ref="/discharge/discharge_details/discharge_diagnoses_other">
        <label ref="jr:itext('/discharge/discharge_details/discharge_diagnoses_other:label')"/>
        <hint ref="jr:itext('/discharge/discharge_details/discharge_diagnoses_other:hint')"/>
      </input>
    </group>
    <group appearance="field-list summary" ref="/discharge/group_review">
      <label ref="jr:itext('/discharge/group_review:label')"/>
      <input ref="/discharge/group_review/n_submit">
        <label ref="jr:itext('/discharge/group_review/n_submit:label')"/>
      </input>
      <input appearance="h1 yellow" ref="/discharge/group_review/n_patient_details_title">
        <label ref="jr:itext('/discharge/group_review/n_patient_details_title:label')"/>
      </input>
      <input ref="/discharge/group_review/n_patient_details">
        <label ref="jr:itext('/discharge/group_review/n_patient_details:label')"/>
      </input>
      <input appearance="h1 blue" ref="/discharge/group_review/n_discharge_reasons_title">
        <label ref="jr:itext('/discharge/group_review/n_discharge_reasons_title:label')"/>
      </input>
      <input appearance="li" ref="/discharge/group_review/n_delivery">
        <label ref="jr:itext('/discharge/group_review/n_delivery:label')"/>
      </input>
      <input appearance="li" ref="/discharge/group_review/n_malnutrition">
        <label ref="jr:itext('/discharge/group_review/n_malnutrition:label')"/>
      </input>
      <input appearance="li" ref="/discharge/group_review/n_tb">
        <label ref="jr:itext('/discharge/group_review/n_tb:label')"/>
      </input>
      <input appearance="li" ref="/discharge/group_review/n_other_discharge">
        <label ref="jr:itext('/discharge/group_review/n_other_discharge:label')"/>
      </input>
    </group>
  </h:body>

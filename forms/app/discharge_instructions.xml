      <bind calculate="../inputs/source" nodeset="/discharge_instructions/source" type="string"/>
      <bind calculate="../inputs/source_id" nodeset="/discharge_instructions/source_id" type="string"/>
      <bind calculate="../inputs/contact/_id" nodeset="/discharge_instructions/patient_uuid" type="string"/>
      <bind calculate="../inputs/contact/_id" nodeset="/discharge_instructions/patient_id" required="true()" type="string"/>
      <bind calculate="../inputs/contact/name" nodeset="/discharge_instructions/patient_name" type="string"/>
      <bind calculate="floor( difference-in-months( ../inputs/contact/date_of_birth, today() ) div 12 )" nodeset="/discharge_instructions/patient_age_in_years" type="string"/>
      <bind calculate="difference-in-months( ../inputs/contact/date_of_birth, today() )" nodeset="/discharge_instructions/patient_age_in_months" type="string"/>
      <bind calculate="../inputs/discharge_instructions" nodeset="/discharge_instructions/c_discharge_instructions" type="string"/>
      <bind calculate="../inputs/contact/date_of_birth" nodeset="/discharge_instructions/date_of_birth" type="string"/>
      <bind calculate="../inputs/phone" nodeset="/discharge_instructions/c_phone" type="string"/>
      <bind calculate="instance('contact-summary')/context/chw_phone" nodeset="/discharge_instructions/c_chw_phone" type="string"/>
      <bind calculate="concat(../../inputs/meta/location/lat, concat(' ', ../../inputs/meta/location/long))" nodeset="/discharge_instructions/geolocation" type="string"/>
      <bind calculate="if(../c_chw_phone != '', ../c_chw_phone, ../c_phone)" nodeset="/discharge_instructions/chw_phone" type="string"/>
      <bind nodeset="/discharge_instructions/discharge_details/n_convey_message" readonly="true()" type="string"/>
      <bind nodeset="/discharge_instructions/discharge_details/conveyed_message" required="true()" type="select1"/>
      <bind nodeset="/discharge_instructions/group_review/n_discharge_report_title" readonly="true()" type="string"/>
      <bind nodeset="/discharge_instructions/group_review/n_submit" readonly="true()" type="string"/>
      <bind nodeset="/discharge_instructions/group_review/n_patient_details_title" readonly="true()" type="string"/>
      <bind calculate="../../patient_age_in_months mod 12" nodeset="/discharge_instructions/group_review/c_patient_mod_mnths" type="string"/>
      <bind calculate="if(../../patient_age_in_years &lt;= 5, 
concat( /discharge_instructions/patient_age_in_years , ' years ',  /discharge_instructions/group_review/c_patient_mod_mnths , ' months old'),
concat( /discharge_instructions/patient_age_in_years , ' years old'))" nodeset="/discharge_instructions/group_review/c_age_string" type="string"/>
      <bind nodeset="/discharge_instructions/group_review/n_patient_details" readonly="true()" type="string"/>
      <bind nodeset="/discharge_instructions/group_review/n_discharge_instructions_title" readonly="true()" type="string"/>
      <bind nodeset="/discharge_instructions/group_review/n_discharge_instructions" readonly="true()" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/discharge_instructions/meta/instanceID" readonly="true()" type="string"/>
    </model>

      <bind calculate="../inputs/source" nodeset="/tb_screening/source" type="string"/>
      <bind calculate="../inputs/source_id" nodeset="/tb_screening/source_id" type="string"/>
      <bind calculate="../inputs/contact/_id" nodeset="/tb_screening/patient_uuid" type="string"/>

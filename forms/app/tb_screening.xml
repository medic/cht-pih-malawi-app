      <bind calculate="../inputs/contact/name" nodeset="/tb_screening/patient_name" type="string"/>
      <bind calculate="../inputs/contact/date_of_birth" nodeset="/tb_screening/patient_date_of_birth" type="string"/>
      <bind calculate="floor( difference-in-months(  /tb_screening/patient_date_of_birth , today() ) div 12 )" nodeset="/tb_screening/patient_age_in_years" type="string"/>
      <bind calculate="difference-in-months(  /tb_screening/patient_date_of_birth , today() )" nodeset="/tb_screening/patient_age_in_months" type="string"/>
      <bind calculate="floor( decimal-date-time(today()) - decimal-date-time( /tb_screening/patient_date_of_birth ) )" nodeset="/tb_screening/patient_age_in_days" type="string"/>
      <bind calculate="floor((decimal-date-time(today()) - decimal-date-time( /tb_screening/patient_date_of_birth )) div 7)" nodeset="/tb_screening/patient_age_in_weeks" type="string"/>
      <bind calculate="../inputs/contact/date_of_birth" nodeset="/tb_screening/date_of_birth" type="string"/>
      <bind calculate="../inputs/contact/parent/contact/phone" nodeset="/tb_screening/chw_phone" type="string"/>
      <bind calculate="concat(../../inputs/meta/location/lat, concat(' ', ../../inputs/meta/location/long))" nodeset="/tb_screening/geolocation" type="string"/>
      <bind constraint="not(selected(., 'none') 
and count-selected(.) &gt; 1)" jr:constraintMsg="jr:itext('/tb_screening/tb_screening/tb_symptoms:jr:constraintMsg')" nodeset="/tb_screening/tb_screening/tb_symptoms" required="true()" type="select"/>
      <bind nodeset="/tb_screening/tb_screening/n_accompany" readonly="true()" relevant="not(selected(../tb_symptoms, 'none'))
and count-selected(../tb_symptoms) &gt;= 1" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/tb_screening/meta/instanceID" readonly="true()" type="string"/>
    </model>

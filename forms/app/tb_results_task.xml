            <referred/>
            <ref_type/>
          </tb_results>
          <meta tag="hidden">
            <instanceID/>
          </meta>
        </tb_results_task>
      </instance>
      <instance id="contact-summary"/>
      <bind nodeset="/tb_results_task/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/tb_results_task/inputs/source" type="string"/>
      <bind nodeset="/tb_results_task/inputs/source_id" type="string"/>
      <bind nodeset="/tb_results_task/inputs/tb_result" type="string"/>
      <bind nodeset="/tb_results_task/inputs/contact/_id" type="db:person"/>
      <bind nodeset="/tb_results_task/inputs/contact/name" type="string"/>
      <bind nodeset="/tb_results_task/inputs/contact/patient_id" type="string"/>
      <bind nodeset="/tb_results_task/inputs/contact/date_of_birth" type="string"/>
      <bind nodeset="/tb_results_task/inputs/contact/sex" type="string"/>
      <bind nodeset="/tb_results_task/inputs/contact/parent/parent/contact/name" type="string"/>
      <bind nodeset="/tb_results_task/inputs/contact/parent/parent/contact/phone" type="string"/>
      <bind calculate="../inputs/source" nodeset="/tb_results_task/source" type="string"/>
      <bind calculate="../inputs/source_id" nodeset="/tb_results_task/source_id" type="string"/>
      <bind calculate="../inputs/contact/_id" nodeset="/tb_results_task/patient_uuid" type="string"/>
      <bind calculate="../inputs/contact/_id" nodeset="/tb_results_task/patient_id" required="true()" type="string"/>
      <bind calculate="../inputs/contact/name" nodeset="/tb_results_task/patient_name" type="string"/>
      <bind calculate="../inputs/contact/date_of_birth" nodeset="/tb_results_task/patient_date_of_birth" type="string"/>
      <bind calculate="floor( difference-in-months(  /tb_results_task/patient_date_of_birth , today() ) div 12 )" nodeset="/tb_results_task/patient_age_in_years" type="string"/>
      <bind calculate="difference-in-months(  /tb_results_task/patient_date_of_birth , today() )" nodeset="/tb_results_task/patient_age_in_months" type="string"/>
      <bind calculate="floor( decimal-date-time(today()) - decimal-date-time( /tb_results_task/patient_date_of_birth ) )" nodeset="/tb_results_task/patient_age_in_days" type="string"/>
      <bind calculate="floor((decimal-date-time(today()) - decimal-date-time( /tb_results_task/patient_date_of_birth )) div 7)" nodeset="/tb_results_task/patient_age_in_weeks" type="string"/>
      <bind calculate="../inputs/contact/date_of_birth" nodeset="/tb_results_task/date_of_birth" type="string"/>
      <bind calculate="../inputs/contact/parent/contact/phone" nodeset="/tb_results_task/chw_phone" type="string"/>
      <bind calculate="concat(../../inputs/meta/location/lat, concat(' ', ../../inputs/meta/location/long))" nodeset="/tb_results_task/geolocation" type="string"/>
      <bind calculate=" /tb_results_task/tb_results/referred " nodeset="/tb_results_task/is_referral_case" type="string"/>
      <bind calculate="instance('contact-summary')/context/tb_test_result" nodeset="/tb_results_task/tb_test_result" type="string"/>
      <bind calculate="../inputs/tb_result" nodeset="/tb_results_task/result" type="string"/>
      <bind calculate="if(../result = 'positive', 'Ali ndi chifuwa chachikulu', if(../result='negative', 'Alibe chifuwa chachikulu', 'Makhololo anabwezedwa'))" nodeset="/tb_results_task/result_ny" type="string"/>
      <bind nodeset="/tb_results_task/tb_results/n_results_positive" readonly="true()" relevant=" /tb_results_task/result  = 'positive'" type="string"/>
      <bind nodeset="/tb_results_task/tb_results/n_results_negative" readonly="true()" relevant=" /tb_results_task/result  = 'negative'" type="string"/>
      <bind nodeset="/tb_results_task/tb_results/n_results_rejected" readonly="true()" relevant=" /tb_results_task/result  = 'rejected'" type="string"/>
      <bind nodeset="/tb_results_task/tb_results/n_results" readonly="true()" type="string"/>
      <bind nodeset="/tb_results_task/tb_results/referred" relevant=" /tb_results_task/result  = 'positive'" required="true()" type="select1"/>
      <bind nodeset="/tb_results_task/tb_results/ref_type" relevant="selected(../referred, 'yes')" required="true()" type="select1"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/tb_results_task/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body class="pages">
    <group appearance="field-list hidden" ref="/tb_results_task/inputs">
      <label ref="jr:itext('/tb_results_task/inputs:label')"/>
      <group appearance="hidden" ref="/tb_results_task/inputs/contact">
        <label ref="jr:itext('/tb_results_task/inputs/contact:label')"/>
        <input appearance="db-object" ref="/tb_results_task/inputs/contact/_id">
          <label ref="jr:itext('/tb_results_task/inputs/contact/_id:label')"/>
        </input>
        <group appearance="hidden" ref="/tb_results_task/inputs/contact/parent">
          <label ref="jr:itext('/tb_results_task/inputs/contact/parent:label')"/>
          <group appearance="hidden" ref="/tb_results_task/inputs/contact/parent/parent">
            <label ref="jr:itext('/tb_results_task/inputs/contact/parent/parent:label')"/>
            <group appearance="hidden" ref="/tb_results_task/inputs/contact/parent/parent/contact">
              <label ref="jr:itext('/tb_results_task/inputs/contact/parent/parent/contact:label')"/>
            </group>
          </group>
        </group>
      </group>
    </group>
    <group appearance="field-list" ref="/tb_results_task/tb_results">
      <label ref="jr:itext('/tb_results_task/tb_results:label')"/>
      <input ref="/tb_results_task/tb_results/n_results_positive">
        <label ref="jr:itext('/tb_results_task/tb_results/n_results_positive:label')"/>
      </input>
      <input ref="/tb_results_task/tb_results/n_results_negative">
        <label ref="jr:itext('/tb_results_task/tb_results/n_results_negative:label')"/>
      </input>
      <input ref="/tb_results_task/tb_results/n_results_rejected">
        <label ref="jr:itext('/tb_results_task/tb_results/n_results_rejected:label')"/>
      </input>
      <input appearance="hidden" ref="/tb_results_task/tb_results/n_results">
        <label ref="jr:itext('/tb_results_task/tb_results/n_results:label')"/>
      </input>
      <select1 ref="/tb_results_task/tb_results/referred">
        <label ref="jr:itext('/tb_results_task/tb_results/referred:label')"/>
        <item>
          <label ref="jr:itext('/tb_results_task/tb_results/referred/yes:label')"/>
          <value>yes</value>
        </item>
        <item>
          <label ref="jr:itext('/tb_results_task/tb_results/referred/no:label')"/>
          <value>no</value>
        </item>
      </select1>
      <select1 ref="/tb_results_task/tb_results/ref_type">
        <label ref="jr:itext('/tb_results_task/tb_results/ref_type:label')"/>
        <item>
          <label ref="jr:itext('/tb_results_task/tb_results/ref_type/chw:label')"/>
          <value>chw</value>
        </item>
        <item>
          <label ref="jr:itext('/tb_results_task/tb_results/ref_type/no_chw:label')"/>
          <value>no_chw</value>
        </item>
      </select1>
    </group>
  </h:body>

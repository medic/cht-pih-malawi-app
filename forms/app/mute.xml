concat( /mute/patient_age_in_years , ' years ',  /mute/group_review/c_patient_mod_mnths , ' months old'),
concat( /mute/patient_age_in_years , ' years old'))" nodeset="/mute/group_review/c_age_string" type="string"/>
      <bind nodeset="/mute/group_review/n_patient_details" readonly="true()" type="string"/>
      <bind nodeset="/mute/group_review/n_reasons_title" readonly="true()" type="string"/>
      <bind nodeset="/mute/group_review/n_hospitalized" readonly="true()" relevant="selected(../../mute_request/reason, 'hospitalized')" type="string"/>
      <bind nodeset="/mute/group_review/n_moved_temporarily" readonly="true()" relevant="selected(../../mute_request/reason, 'moved_temporarily')" type="string"/>
      <bind nodeset="/mute/group_review/n_moved_permanently" readonly="true()" relevant="selected(../../mute_request/reason, 'moved_permanently')" type="string"/>
      <bind nodeset="/mute/group_review/n_other" readonly="true()" relevant="selected(../../mute_request/reason, 'other')" type="string"/>
      <bind nodeset="/mute/group_review/n_special_instruction_title" readonly="true()" type="string"/>

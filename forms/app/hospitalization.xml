      <bind nodeset="/hospitalization/inputs" relevant="./source = 'user'"/>
      <bind nodeset="/hospitalization/inputs/source" type="string"/>
      <bind nodeset="/hospitalization/inputs/source_id" type="string"/>
      <bind nodeset="/hospitalization/inputs/contact/_id" type="db:person"/>
      <bind nodeset="/hospitalization/inputs/contact/name" type="string"/>
      <bind nodeset="/hospitalization/inputs/contact/patient_id" type="string"/>
      <bind nodeset="/hospitalization/inputs/contact/date_of_birth" type="string"/>
      <bind nodeset="/hospitalization/inputs/contact/sex" type="string"/>
      <bind nodeset="/hospitalization/inputs/contact/parent/parent/contact/name" type="string"/>
      <bind nodeset="/hospitalization/inputs/contact/parent/parent/contact/phone" type="string"/>
      <bind calculate="../inputs/source" nodeset="/hospitalization/source" type="string"/>
      <bind calculate="../inputs/source_id" nodeset="/hospitalization/source_id" type="string"/>
      <bind calculate="floor( difference-in-months( ../inputs/contact/date_of_birth, today() ) div 12 )" nodeset="/hospitalization/patient_age_in_years" type="string"/>
      <bind calculate="../inputs/contact/_id" nodeset="/hospitalization/patient_uuid" type="string"/>
      <bind calculate="../inputs/contact/_id" nodeset="/hospitalization/patient_id" required="true()" type="string"/>
      <bind calculate="../inputs/contact/name" nodeset="/hospitalization/patient_name" type="string"/>
      <bind calculate="../inputs/contact/date_of_birth" nodeset="/hospitalization/date_of_birth" type="string"/>
      <bind calculate="../inputs/contact/parent/contact/phone" nodeset="/hospitalization/chw_phone" type="string"/>
      <bind calculate="concat(../../inputs/meta/location/lat, concat(' ', ../../inputs/meta/location/long))" nodeset="/hospitalization/geolocation" type="string"/>
      <bind constraint="decimal-date-time(.) &lt;= decimal-date-time(today())" jr:constraintMsg="jr:itext('/hospitalization/hospitalization_details/hospitalization_date:jr:constraintMsg')" nodeset="/hospitalization/hospitalization_details/hospitalization_date" required="true()" type="date"/>
      <bind nodeset="/hospitalization/hospitalization_details/hospitalization_reasons" required="true()" type="select"/>
      <bind nodeset="/hospitalization/hospitalization_details/hospitalization_reasons_other" relevant="selected(../hospitalization_reasons, 'other')" required="true()" type="string"/>
      <bind nodeset="/hospitalization/group_review/n_submit" readonly="true()" type="string"/>
      <bind nodeset="/hospitalization/group_review/n_patient_details_title" readonly="true()" type="string"/>
      <bind nodeset="/hospitalization/group_review/n_patient_details" readonly="true()" type="string"/>
      <bind nodeset="/hospitalization/group_review/n_hospitalization_reasons_title" readonly="true()" type="string"/>
      <bind nodeset="/hospitalization/group_review/n_art" readonly="true()" relevant="selected(../../hospitalization_details/hospitalization_reasons, 'art')" type="string"/>
      <bind nodeset="/hospitalization/group_review/n_tb" readonly="true()" relevant="selected(../../hospitalization_details/hospitalization_reasons, 'tb')" type="string"/>
      <bind nodeset="/hospitalization/group_review/n_malnutrition" readonly="true()" relevant="selected(../../hospitalization_details/hospitalization_reasons, 'malnutrition')" type="string"/>
      <bind nodeset="/hospitalization/group_review/n_ncd" readonly="true()" relevant="selected(../../hospitalization_details/hospitalization_reasons, 'ncd')" type="string"/>
      <bind nodeset="/hospitalization/group_review/n_pregnancy_related" readonly="true()" relevant="selected(../../hospitalization_details/hospitalization_reasons, 'pregnancy_related')" type="string"/>
      <bind nodeset="/hospitalization/group_review/n_other" readonly="true()" relevant="selected(../../hospitalization_details/hospitalization_reasons, 'other')" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/hospitalization/meta/instanceID" readonly="true()" type="string"/>
    </model>

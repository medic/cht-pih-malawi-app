      <bind nodeset="/hiv_screening/inputs/contact/parent/parent/contact/name" type="string"/>
      <bind nodeset="/hiv_screening/inputs/contact/parent/parent/contact/phone" type="string"/>
      <bind calculate="../inputs/source" nodeset="/hiv_screening/source" type="string"/>
      <bind calculate="../inputs/source_id" nodeset="/hiv_screening/source_id" type="string"/>
      <bind calculate="../inputs/contact/_id" nodeset="/hiv_screening/patient_uuid" type="string"/>
      <bind calculate="../inputs/contact/_id" nodeset="/hiv_screening/patient_id" required="true()" type="string"/>
      <bind calculate="../inputs/contact/name" nodeset="/hiv_screening/patient_name" type="string"/>
      <bind calculate="../inputs/contact/date_of_birth" nodeset="/hiv_screening/patient_date_of_birth" type="string"/>
      <bind calculate="floor( difference-in-months(  /hiv_screening/patient_date_of_birth , today() ) div 12 )" nodeset="/hiv_screening/patient_age_in_years" type="string"/>
      <bind calculate="difference-in-months(  /hiv_screening/patient_date_of_birth , today() )" nodeset="/hiv_screening/patient_age_in_months" type="string"/>
      <bind calculate="floor( decimal-date-time(today()) - decimal-date-time( /hiv_screening/patient_date_of_birth ) )" nodeset="/hiv_screening/patient_age_in_days" type="string"/>
      <bind calculate="floor((decimal-date-time(today()) - decimal-date-time( /hiv_screening/patient_date_of_birth )) div 7)" nodeset="/hiv_screening/patient_age_in_weeks" type="string"/>
      <bind calculate="../inputs/contact/date_of_birth" nodeset="/hiv_screening/date_of_birth" type="string"/>
      <bind calculate="../inputs/contact/parent/contact/phone" nodeset="/hiv_screening/chw_phone" type="string"/>
      <bind calculate="concat(../../inputs/meta/location/lat, concat(' ', ../../inputs/meta/location/long))" nodeset="/hiv_screening/geolocation" type="string"/>
      <bind nodeset="/hiv_screening/last_hiv_test" required="true()" type="select1"/>
      <bind calculate="if(selected(../last_hiv_test, '0')
or selected(../last_hiv_test, '4'), 'yes', 'no')" nodeset="/hiv_screening/refer_for_hiv" type="string"/>
      <bind nodeset="/hiv_screening/n_refer_for_hiv" readonly="true()" relevant="selected(../last_hiv_test, '0')
or selected(../last_hiv_test, '4')" type="string"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/hiv_screening/meta/instanceID" readonly="true()" type="string"/>
    </model>
